---
import ExperienceItem from "./ExperienceItem.astro";
import Heading from "../ui/Heading.astro";
import { Icon } from "astro-icon/components";

const EXPERIENCE = [
  {
    date: "Aug 2023 - Present",
    title: "Software Developer",
    company: "Onlinejobs.ph",
    description:
      "Leading the development of a sophisticated real-time communication system using Flask framework. Architecting and implementing a full-featured chat and video call platform similar to Skype, including real-time messaging, voice/video calls, and user presence management. Working with WebRTC, WebSockets, and other modern web technologies to deliver a seamless communication experience.",
  },
  {
    date: "Jun-Aug 2023",
    title: "Web Development Instructor",
    company: "Udemy",
    description:
      "Created and taught comprehensive web development courses on Udemy's learning platform. Educated students in both front-end and back-end technologies, delivering engaging course materials and providing hands-on guidance. Designed curriculum to help students master modern web development practices through practical, project-based learning.",
  },
  {
    date: "March-May 2023",
    title: "Junior Frontend Developer",
    company: "Purple Roof",
    description:
      "Worked as a junior frontend developer under senior developer guidance, contributing to mortgage solutions platform development. Collaborated with the team at Purple Roof (purpleroof.com) to implement and maintain user-facing features for their mortgage services platform.",
  },
  {
    date: "Dec 2022 - Mar 2023",
    title: "Backend Python Developer",
    company: "Rooche Digital",
    description:
      "Developed and maintained backend APIs for ecommerce clients using Python. Implemented robust API solutions to support various ecommerce functionalities, ensuring scalability and performance. Collaborated with frontend teams to deliver seamless integration and optimal user experiences.",
  },
];
---

<section class="py-8 px-8 max-md:py-4 mb-4 scroll-m-16" id="experience">
  <div class="flex flex-col pt-8 max-w-4xl mx-auto">
    <div class="flex gap-4 items-center justify-center">
      <Icon class="text-3xl dark:text-white text-blacktext" name="briefcase" />
      <Heading text="Work" textGradient="Experience" level={2} />
    </div>

    <div class="relative max-md:mt-0 mt-8" aria-label="Professional experience">
      <ol class="relative mt-10">
        {
          EXPERIENCE.map((experience, index) => (
            <li>
              <article
                role="article"
                aria-labelledby={`experience-title-${index}`}
              >
                <div
                  class="flex flex-col gap-2  text-zinc-00 dark:text-zinc-300 md:col-span-3"
                  aria-describedby={`experience-title-${index}`}
                >
                  <ExperienceItem {...experience} />
                </div>
              </article>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
